<div class="card">
<div class="card-body">
   <h2 class="card-title d-flex justify-content-between nb-4">
    <span>Projects</span>
    <%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
   </h2>

  <% @projects.each do |project| %>
  <%= link_to project, class: 'text-decoration-none' do %> 
  <div class="card">
  <div class="card-body">
  <h3 class="card-title text-dark"><b><%=project.name%></h3></b>
    <p class="text-secondary"><%=project.description %></p>
    </div>
  </div> 
   <% end %>
  <% end %>
  </div>  

<br>

